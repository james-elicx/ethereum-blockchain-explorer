{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",

    "types": ["node"]
  },

  "include": [
    "**/tests/**/*.spec.ts",
    "**/tests/**/*.test.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.test.ts",
    "types/**/*.d.ts",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "**/*.config.js",
    "**/*.config.ts",
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/src/**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
